<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>LP</display-name>
	  
  <servlet>
    <servlet-name>LandingController</servlet-name>
    <servlet-class>controllers.LandingController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LandingController</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
    <servlet-name>VerificationController</servlet-name>
    <servlet-class>controllers.VerificationController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>VerificationController</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
    <servlet-name>AdminController</servlet-name>
    <servlet-class>controllers.AdminController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminController</servlet-name>
    <url-pattern>/admin</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
    <servlet-name>GetProductDataController</servlet-name>
    <servlet-class>controllers.GetProductDataController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetProductDataController</servlet-name>
    <url-pattern>/API/GetProductData</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
    <servlet-name>SaveProductDataController</servlet-name>
    <servlet-class>controllers.SaveProductDataController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SaveProductDataController</servlet-name>
    <url-pattern>/API/SaveProductData</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
    <servlet-name>UploadImageController</servlet-name>
    <servlet-class>controllers.UploadImageController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UploadImageController</servlet-name>
    <url-pattern>/API/UploadImage</url-pattern>
  </servlet-mapping>
  
  
  
  
  
  
  
  <filter>
	 <filter-name>filter</filter-name>
	 <filter-class>controllers.FilterController</filter-class>
 </filter>
 <filter-mapping>
	 <filter-name>filter</filter-name>
	 <url-pattern>/</url-pattern>
 </filter-mapping>
  
</web-app>